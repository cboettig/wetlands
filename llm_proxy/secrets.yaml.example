apiVersion: v1
kind: Secret
metadata:
  name: llm-proxy-secrets
type: Opaque
stringData:
  # Your NRP API key for accessing the LLM endpoint
  nrp-api-key: "your-nrp-api-key-here"
  # Proxy key for client authentication
  proxy-key: "your-proxy-key-here"

---
